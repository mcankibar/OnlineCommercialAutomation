@model List<OnlineCommercialAutomation.Models.Classes.SalesTransaction>

@{
    ViewBag.Title = "DepartmentPersonalSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Department Personal Sales</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        Personal Name : @ViewBag.PersonalName
    </li>
</ol>

<table class="table table-condensed">
    <tr>
        <th>Sale ID</th>
        <th>Product</th>
        <th>Customer</th>
        <th>Price</th>
        <th>Amount</th>
        <th>Total Price</th>
        <th>Date</th>
        <th>
            Print
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Product.Name</td>
            <td>@item.Customer.Name</td>
            <td>@item.Price</td>
            <td>@item.Amount</td>
            <td>@item.TotalPrice</td>
            <td>@item.Date</td>
            <td><a href="#" class="btn btn-info" style="background-color:cadetblue">Print</a></td>
        </tr>
    }

</table>

