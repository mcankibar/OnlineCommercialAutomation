@model OnlineCommercialAutomation.Models.Classes.InvoiceItem

@{
    ViewBag.Title = "Invoice Add Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Invoice Add Detail</h2>

<form class="form-group" method="post">
    @Html.HiddenFor(x => x.InvoiceId, new { Value = ViewBag.InvoiceId })

    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.PricePerUnit)
    @Html.TextBoxFor(x => x.PricePerUnit, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.TotalPrice)
    @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control", @readonly = "readonly" })
    <br />

    <button type="submit" class="btn btn-info">Add Invoice Detail</button>
</form>
