@model List<OnlineCommercialAutomation.Models.Classes.SalesTransaction>

@{
    ViewBag.Title = "CustomerSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CustomerSales</h2>
<br />

<h3>@Model.Select(i => i.Customer.Name + " " + i.Customer.Surname).FirstOrDefault()</h3>

<table class="table table-striped">
    <tr>
        <th>Transaction Id</th>

        <th>Personal Name</th>
        <th>Product Name</th>
        <th>Amount</th>
        <th>Price</th>
        <th>Total Price</th>
        <th>Date</th>
        <th>Print</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>

            <td>@item.Personal.Name @item.Personal.Surname</td>
            <td>@item.Product.Name</td>
            <td>@item.Amount</td>
            <td>@item.Price</td>
            <td>@item.TotalPrice</td>
            <td>@item.Date</td>
            <td><a href="#" class="btn btn-danger" style="background-color:cadetblue">Print</a></td>

        </tr>
    }
</table>

